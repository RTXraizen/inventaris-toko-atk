<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tokoatk.SupplierController">
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="tabelSupplier" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="kolomNama" prefWidth="150.0" text="Nama Supplier" />
                <TableColumn fx:id="kolomKontak" prefWidth="120.0" text="Kontak Person" />
                  <TableColumn fx:id="kolomTelepon" prefWidth="110.0" text="No. Telepon" />
                  <TableColumn fx:id="kolomAlamat" prefWidth="200.0" text="Alamat" />
              </columns>
            </TableView>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <right>
      <VBox prefWidth="280.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label id="form-title" text="Form Data Supplier">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <GridPane hgap="10.0" vgap="12.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="80.0" prefWidth="90.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Nama Supplier" />
                  <TextField fx:id="fieldNama" GridPane.columnIndex="1" />
                  <Label text="Kontak Person" GridPane.rowIndex="1" />
                  <TextField fx:id="fieldKontak" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="No. Telepon" GridPane.rowIndex="2" />
                  <TextField fx:id="fieldTelepon" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Label text="Alamat" GridPane.rowIndex="3" />
                  <TextArea fx:id="fieldAlamat" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <Region VBox.vgrow="ALWAYS" />
            <VBox spacing="8.0">
               <children>
                  <Button fx:id="btnSimpan" maxWidth="1.7976931348623157E308" onAction="#handleSimpanButton" text="Simpan Data" />
                  <Button fx:id="btnHapus" maxWidth="1.7976931348623157E308" onAction="#handleHapusButton" text="Hapus" />
                  <Button fx:id="btnBersih" maxWidth="1.7976931348623157E308" onAction="#handleBersihButton" text="Bersihkan Form" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </right>
</BorderPane>