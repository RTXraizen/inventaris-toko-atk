<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="1200.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tokoatk.FXMLDocumentController">
   <top>
      <HBox alignment="CENTER_RIGHT" prefHeight="40.0" style="-fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnLogout" mnemonicParsing="false" onAction="#handleLogoutButton" text="Logout" style="-fx-background-color: #DC3545; -fx-text-fill: white; -fx-font-weight: bold;" />
         </children>
         <padding>
            <Insets left="15.0" right="15.0" />
         </padding>
      </HBox>
   </top>
   <right>
      <VBox prefWidth="320.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <VBox spacing="15.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label id="form-title" text="Form Data Barang" />
                  <GridPane hgap="10.0" vgap="12.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="90.0" minWidth="80.0" prefWidth="80.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Nama Barang" />
                        <TextField fx:id="fieldNama" GridPane.columnIndex="1" />
                        <Label text="Kategori" GridPane.rowIndex="1" />
                        <ComboBox fx:id="comboKategori" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="Supplier" GridPane.rowIndex="2" />
                        <HBox spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <children>
                              <ComboBox fx:id="comboSupplier" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnManageSupplier" mnemonicParsing="false" onAction="#handleManageSupplierButton" text="✏️" />
                           </children>
                        </HBox>
                        <Label text="Stok" GridPane.rowIndex="3" />
                        <TextField fx:id="fieldStok" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="Harga Jual" GridPane.rowIndex="4" />
                        <TextField fx:id="fieldHarga" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="Deskripsi" GridPane.rowIndex="5" />
                        <TextArea fx:id="fieldDeskripsi" prefHeight="200.0" prefWidth="200.0" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                     </children>
                  </GridPane>
               </children>
            </VBox>
            <VBox spacing="8.0">
               <children>
                  <Button fx:id="btnSimpan" maxWidth="1.7976931348623157E308" onAction="#handleSimpanButton" text="Simpan Data Barang" />
                  <Button fx:id="btnHapus" maxWidth="1.7976931348623157E308" onAction="#handleHapusButton" text="Hapus Barang" />
                  <Button fx:id="btnBersih" maxWidth="1.7976931348623157E308" onAction="#handleBersihButton" text="Bersihkan Form" />
               </children>
            </VBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="5.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <bottom>
      <HBox alignment="CENTER_LEFT" prefHeight="30.0">
         <children>
            <Label fx:id="labelJam" text="Memuat jam...">
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </bottom>
   <center>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Label text="Filter Barang:" />
                  <TextField fx:id="fieldCari" promptText="Ketik nama, kategori, atau supplier..." HBox.hgrow="ALWAYS" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#handleRefreshButton" text="Refresh Data" />
                  <Button fx:id="btnCetak" mnemonicParsing="false" onAction="#handleCetakLaporan" text="Cetak Laporan" />
                  <Button fx:id="btnExport" mnemonicParsing="false" onAction="#handleExportExcel" text="Export Excel" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
            <TableView fx:id="tabelBarang" VBox.vgrow="ALWAYS">
    
    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>
    <columns>
        <TableColumn fx:id="kolomNama" prefWidth="170.0" text="Nama Barang" />
        <TableColumn fx:id="kolomKategori" prefWidth="110.0" text="Kategori" />
        <TableColumn fx:id="kolomStok" prefWidth="50.0" text="Stok" />
        <TableColumn fx:id="kolomHarga" prefWidth="120.0" text="Harga Jual" />
        <TableColumn fx:id="kolomDeskripsi" prefWidth="150.0" text="Deskripsi" />
        <TableColumn fx:id="kolomSupplier" prefWidth="150.0" text="Supplier" />
        <TableColumn fx:id="kolomTeleponSupplier" prefWidth="110.0" text="No. Telp Supplier" />
        <TableColumn fx:id="kolomAlamatSupplier" prefWidth="200.0" text="Alamat Supplier" />
    </columns>
</TableView>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>